<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/firist_main_image"
        android:layout_centerHorizontal="true"
        android:src="@drawable/devel16"
        ></ImageView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/second_main_image"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/firist_main_image"
        ></ImageView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="supmitt"
        android:id="@+id/button_main_activity"
        android:layout_margin="20dp"
        android:layout_below="@+id/firist_main_image"
        ></Button>

</RelativeLayout>